<% if (site.categories.length){ %>
<aside class="widget">
    <h3 class="widget-title">友情链接</h3>
    <div class="widget-content">
        <ul>
            <% for (var i in theme.friendlinks){ %>
            <li><a href="<%= theme.friendlinks[i].link%>"><%= theme.friendlinks[i].keyword%></a></li>
            <% } %>
        </ul>
    </div>
</aside>
<% } %>